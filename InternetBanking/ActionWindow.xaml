<Page x:Class="InternetBanking.ActionWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:InternetBanking"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="400"
      Title="ActionWindow" Background="Bisque">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="136*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="136*"/>
        </Grid.RowDefinitions>
        <Label Content="Введите сумму" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Margin="89,142,0,0" VerticalAlignment="Top" Width="195"/>
        <TextBox Name="textBox_actionSum" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Height="23" Margin="89,4,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="195"/>
        <Button Content="Снять" HorizontalAlignment="Left" Margin="136,10,0,0" Grid.Row="2" VerticalAlignment="Top" Width="100" Click="Withdrow_button"/>
        <Button Content="Пополнить" HorizontalAlignment="Left" Margin="136,10,0,0" Grid.Row="3" VerticalAlignment="Top" Width="100" Click="add_button"/>
    </Grid>
</Page>
